<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}{{ 'site_name'|trans }}{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
</head>
<body id="{% block page_id %}{% endblock %}">
{% block header %}
    <header>
        <nav id="header" class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="/">{{ 'site_name'|trans }}</a>
                <button class="navbar-toggler navbar-toggler-right " type="button" data-toggle="collapse"
                        data-target="#primary-nav" aria-controls="primary-nav" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse pt-3 pb-3" id="primary-nav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('pricing_index')}}">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Features</a>
                        </li>
                    </ul>
                    {% block header_right %}
                        {% include '_form/_login.html.twig' %}
                    {% endblock %}
                </div>
            </div>
        </nav>
    </header>
{% endblock %}
{% block body %}
    <div id="main">
        {% block main %}{% endblock %}
    </div>
{% endblock %}
{% block footer %}
    <footer id="footer" class="container">
        <div class="row">
            <div class="col-md-12 pt-5 pb-4">
                <ul class="list-inline">
                    {% block footer_detail_authenticated %}
                        <li class="list-inline-item"><a href="{{ path('register_index') }}">Register</a>
                        </li>
                        <li class="list-inline-item"><a href="{{ path('login_index') }}">Login</a></li>
                    {% endblock %}
                    <li class="list-inline-item"><a href="#">Developers</a></li>
                    <li class="list-inline-item"><a href="#">About</a></li>
                    <li class="list-inline-item"><a href="#">Cookies</a></li>
                    <li class="list-inline-item"><a href="{{path('privacy_index')}}">Privacy</a></li>
                    <li class="list-inline-item"><a href="#">Terms</a></li>
                    <li class="list-inline-item"><a href="#">Help</a></li>
                </ul>
                <p>{{ 'site_name'|trans }} Â© {{ "now"|date("Y") }}</div>
        </div>
    </footer>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/js/app.js') }}"></script>
{% endblock %}
</body>
</html>
